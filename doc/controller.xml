<pingus-controller>
  <controller-config>
    <standard-pointer>
      <axis-pointer speed="4">
	<joystick-axis angle="0"  id="0" axis="0"/>
	<joystick-axis angle="90" id="0" axis="1"/>
      </axis-pointer>

      <axis-pointer>
	<button-axis angle="0">
	  <key-button key="KP_4"/>
	  <key-button key="KP_6"/>
	</button-axis>
	
	<button-axis angle="90">
	  <key-button key="KP_8"/>
	  <key-button key="KP_2"/>
	</button-axis>

	<button-axis angle="45">
	  <key-button key="KP_9"/>
	  <key-button key="KP_1"/>
	</button-axis>

	<button-axis angle="-45">
	  <key-button key="KP_7"/>
	  <key-button key="KP_3"/>
	</button-axis>
      </axis-pointer>
    </standard-pointer>

    <primary-button>
      <joystick-button id="0" button="1"/>
    </primary-button>

    <secondary-button>
      <mouse-button button="2"/>
    </secondary-button>

    <scroll-modifier>
      <mouse-button button="3"/>
    </scroll-modifier>

    <pause-button>
      <key-button key="P"/>
    </pause-button>

    <fast-forward-button>
      <key-button key="F"/>    
    </fast-forward-button>

    <armageddon-button>
      <key-button key="A"/>
    </armageddon-button>

    <action-axis>
      <button-axis angle="0">
	<joystick-button id="0" button="2"/>
	<joystick-button id="0" button="3"/>
      </button-axis>
    </action-axis>

    <escape-button>
      <joystick-button id="0" button="13"/>
      <key-button key="ESCAPE"/>
    </escape-button>

    <action-buttons>
      <action-button>
        <key-button key="F3"/>
      </action-button>

      <action-button>
        <key-button key="F4"/>
      </action-button>
    </action-buttons>
  </controller-config>
</pingus-controller>