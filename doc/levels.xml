<!DOCTYPE pingus-level SYSTEM "pingus-level.dtd">
<?xml version="1.0"?>
<pingus-level>
  <global>
    <author>Ingo Ruhnke &lt;grumbel@gmx.de&gt;</author>
    <levelname>Pipe Panic in Penguin World</levelname>

    <description xml:lang="de_DE">
      This level show a simple pipe system,
      which can be created with just a few 
      pipe tiles.
    </description>

    <number-of-pingus>100</number-of-pingus>
    <number-to-save>50</number-to-save>

    <maptype>SPOT</maptype>
    <data><file>level3.psm</file></data>
    <width>1100</width>
    <height>800</height>
    <colmap>auto</colmap>
  </global>

  <background>
    <image><resource type="datafile">
	<resource-file>textures.dat</resource-file>
	<resource-ident>Textures/stars</resource-ident>
      </resource></image>
    <dim>0.0</dim>
    <scroll-x>0</scroll-x>
    <scroll-y>0</scroll-y>
  </background>

  <button-list>
    <basher>20</basher>
    <button action="blocker">20</button>
    <button action="bomber">20</button>
    <button action="bridger">20</button>
    <button action="climber">20</button>
    <button action="digger">20</button>
    <button action="floater">20</button>
    <button action="miner">20</button>
  </button-list>

  <weather>
    <type>rain</type>
  </weather>

  <start>
    <position>
      <x-pos>0</x-pos>
      <y-pos>0</y-pos>
    </position>
  </start>

  <entrance>
    <type>generic</type>
    <position>
      <x-pos>324</x-pos>
      <y-pos>242</y-pos>
      <z-pos>0</z-pos>
    </position>
    <release-rate>30</release-rate>
    <direction>left</direction>
  </entrance>

  <entrance>
    <type>generic</type>
    <position>
      <x-pos>824</x-pos>
      <y-pos>342</y-pos>
      <z-pos>0</z-pos>
    </position>
    <release-rate>30</release-rate>
    <direction>left</direction>
  </entrance>

  <exit>
    <image><resource>Exits/stone</resource></image>
    <position>
      <x-pos>783</x-pos>
      <y-pos>436</y-pos>
      <z-pos>0</z-pos>
    </position>
  </exit>

  <trap>
    <name>guillotine</name>
    <position>
      <x-pos>399</x-pos>
      <y-pos>205</y-pos>
      <z-pos>-10</z-pos>
    </position>
  </trap>
  
    <groundpiece type="ground">

      <image>
	<resource><file>bla.tga</file></resource>
      </image>

      <position>
	<x-pos>399</x-pos>
	<y-pos>205</y-pos>
	<z-pos>-10</z-pos>    
      </position>
  </groundpiece>
    <spot type="ground">

      <image>
	<resource>
	  <datafile>
	    <resource-file>textures.dat</resource-file>
	    <resource-ident>Textures/stars</resource-ident>
	  </datafile>
	</resource>
      </image>

      <position>
	<x-pos>399</x-pos>
	<y-pos>205</y-pos>
	<z-pos>-10</z-pos>    
      </position>
    </spot>

  </ground-objs>

</pingus-level>
  
