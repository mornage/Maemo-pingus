<pingus-controller>
  <standard-pointer><mouse-pointer /></standard-pointer>

  <primary-button>
    <mouse-button> 
      <button>0</button>
    </mouse-button>
  </primary-button>

  <secondary-button>
    <mouse-button> 
      <button>2</button>
    </mouse-button>
  </secondary-button>

  <pause-button>
    <key-button>
      <key>p</key>
    </key-button>
  </pause-button>

  <fast-forward-button>
    <multiple-button>
      <key-button>
        <key>f</key>
      </key-button>
      <key-button>
        <key>space</key>
      </key-button>
    </multiple-button>
  </fast-forward-button>

  <armageddon-button>
    <key-button>
      <key>a</key>
    </key-button>
  </armageddon-button>

  <escape-button>
    <key-button>
      <key>escape</key>
    </key-button>
  </escape-button>

  <scroller>
    <axis-scroller>
      <speed>1000</speed>
      <button-axis>
        <angle>90</angle>
        <key-button>
          <key>down</key>
        </key-button>
        <key-button>
          <key>up</key>
        </key-button>
      </button-axis>      
      <button-axis>
        <angle>0</angle>
        <key-button>
          <key>right</key>
        </key-button>
        <key-button>
          <key>left</key>
        </key-button>
      </button-axis>
    </axis-scroller>
  </scroller>

  <action-buttons>
    <action-button><key-button><key>1</key></key-button></action-button>
    <action-button><key-button><key>2</key></key-button></action-button>
    <action-button><key-button><key>3</key></key-button></action-button>
    <action-button><key-button><key>4</key></key-button></action-button>
    <action-button><key-button><key>5</key></key-button></action-button>
    <action-button><key-button><key>6</key></key-button></action-button>
    <action-button><key-button><key>7</key></key-button></action-button>
    <action-button><key-button><key>8</key></key-button></action-button>
    <action-button><key-button><key>9</key></key-button></action-button>
    <action-button><key-button><key>0</key></key-button></action-button>
  </action-buttons>

  <action-up>
    <multiple-button>
      <key-button>
        <key>prior</key>
      </key-button>
      <mouse-button>
        <button>5</button>
      </mouse-button>
    </multiple-button>
  </action-up>

  <action-down>
    <multiple-button>
      <key-button>
        <key>next</key>
      </key-button>
      <mouse-button>
        <button>4</button>
      </mouse-button>
    </multiple-button>
  </action-down>
</pingus-controller>
